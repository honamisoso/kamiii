<!DOCTYPE html>
<html>
  <head>
    <title>Kamiii</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">髪いい</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
          <% if !user_signed_in? && !admin_signed_in? %>
          <li class="nav-item">
            <%= link_to '新規登録', new_user_registration_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'ログイン', new_user_session_path, class: 'nav-link' %>
          </li>
          <% elsif user_signed_in? && !admin_signed_in? %>
          <li class="nav-item">
            <%= link_to 'レビュー登録', new_post_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'レビュー一覧', posts_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'nav-link' %>
          </li>
          <% elsif admin_signed_in? && !user_signed_in? %>
          <li class="nav-item">
            <%= link_to 'レビュー一覧', admins_posts_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'ユーザー一覧', admins_users_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: 'nav-link' %>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
  <% if notice %>
    <div class="container">
      <p class="notice"><%= notice %></p>
    </div>
  <% end %>
  <% if alert %>
    <div class="container">
      <p class="alert"><%= alert %></p>
    </div>
  <% end %>





    <%= yield %>
  </body>
</html>
